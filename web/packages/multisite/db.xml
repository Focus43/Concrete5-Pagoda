<?xml version="1.0"?>
<schema version="0.3">
	
	<table name="MultisiteDomain">
		<field name="id" type="I">
			<autoincrement />
			<key />
			<unsigned />
		</field>
		<field name="domain" type="C" size="255" />
		<field name="path" type="C" size="255" />
		<field name="pageID" type="I" size="11">
			<UNSIGNED />
		</field>
		<field name="resolveWildcards" type="I1">
			<unsigned />
			<notnull />
			<default value="0" />
		</field>
		<field name="wildcardRootPath" type="C" size="255" />
		<field name="wildcardParentID" type="I" size="11">
			<UNSIGNED />
		</field>
		
		<!-- indices -->
		<index name="domain">
			<col>domain</col>
			<UNIQUE />
		</index>
		<index name="path">
			<col>path</col>
			<UNIQUE />
		</index>
	    <index name="domainPageID">
	      <col>domain</col>
	      <col>pageID</col>
	    </index>
	</table>
	
</schema>